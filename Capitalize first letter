function capitalizeFirstLetterOfEachWord(str) {
    return str.split(' ')
              .map(word => word.charAt(0).toUpperCase() + word.slice(1))
              .join(' ');
}

console.log(capitalizeFirstLetterOfEachWord("hello world")); 
console.log(capitalizeFirstLetterOfEachWord("good days comming soon"))
console.log(capitalizeFirstLetterOfEachWord("javascript is fun"));
console.log(capitalizeFirstLetterOfEachWord("capitalize each word"));
